{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Contact Management API",
    "description": "MS3 Contact API"
  },
  "host": "localhost:5000",
  "basePath": "/api/v1",
  "schemes": [
    "http"
  ],
  "paths": {
    "/contacts": {
      "post": {
        "summary": "Creates list of Contacts with given input array",
        "description": "",
        "operationId": "post",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "List of Contact object",
            "required": true,
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Contact"
              }
            }
          }
        ],
        "responses": {
          "500": {
            "description": "An unexpected error occured",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "default": {
            "description": "successful operation"
          }
        }
      },
      "get": {
        "summary": "Returns all contacts with Active status",
        "operationId": "get",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "maximum number of results to return",
            "required": true,
            "type": "integer",
            "format": "int32",
            "default": 2
          }
        ],
        "responses": {
          "200": {
            "description": "A list of Contacts",
            "schema": {
              "$ref": "#/definitions/Contact"
            }
          }
        }
      }
    },
    "/contact": {
      "post": {
        "summary": "Creates a contact",
        "description": "",
        "operationId": "post_contact",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Creates a contact",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Contact"
            }
          }
        ],
        "responses": {
          "500": {
            "description": "An unexpected error occured",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "default": {
            "description": "successful operation"
          }
        }
      },
      "get": {
        "summary": "Gets a Contact",
        "description": "Returns a single contact for its fname, lastname and dob.",
        "operationId": "getContact",
        "parameters": [
          {
            "name": "fname",
            "in": "query",
            "required": true,
            "description": "The contact's fname",
            "type": "string",
            "default": "Bob"
          },
          {
            "name": "lname",
            "in": "query",
            "required": true,
            "description": "The contact's lname",
            "type": "string",
            "default": "Fredrick"
          },
          {
            "name": "dob",
            "in": "query",
            "required": true,
            "description": "The contact's dob",
            "type": "string",
            "format": "date",
            "default": "1989-06-21"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns a single contact for its fname, lastname and dob",
            "schema": {
              "$ref": "#/definitions/Contact"
            }
          },
          "404": {
            "description": "The Contact does not exists."
          },
          "500": {
            "description": "An unexpected error occured.",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      },
      "put": {
        "summary": "Updates a Contact and creates one if does not exist alreay",
        "description": "Update a Contact in the contact list",
        "operationId": "updateContact",
         "parameters": [
          {
            "name": "fname",
            "in": "query",
            "required": true,
            "description": "The contact's fname",
            "type": "string",
            "default": "Bob"
          },
          {
            "name": "lname",
            "in": "query",
            "required": true,
            "description": "The contact's lname",
            "type": "string",
            "default": "Fredrick"
          },
          {
            "name": "dob",
            "in": "query",
            "required": true,
            "description": "The contact's dob",
            "type": "string",
            "format": "date",
            "default": "1989-06-21"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Contact"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully updated contact"
          }
        }
      },
      "patch": {
        "summary": "Updates a contact partially",
        "description": "support partial updates for contact",
        "operationId": "patchContact",
        "parameters": [
          {
            "name": "fname",
            "in": "query",
            "required": true,
            "description": "The contact's fname",
            "type": "string",
            "default": "Bob"
          },
          {
            "name": "lname",
            "in": "query",
            "required": true,
            "description": "The contact's lname",
            "type": "string",
            "default": "Fredrick"
          },
          {
            "name": "dob",
            "in": "query",
            "required": true,
            "description": "The contact's dob",
            "type": "string",
            "format": "date",
            "default": "1989-06-21"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/PatchArr"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully updated contact"
          }
        }
      },
      "delete": {
        "summary": "Deletes a contact",
        "description": "Delete a contact",
        "operationId": "deleteContact",
         "parameters": [
          {
            "name": "fname",
            "in": "query",
            "required": true,
            "description": "The contact's fname",
            "type": "string",
            "default": "Bob"
          },
          {
            "name": "lname",
            "in": "query",
            "required": true,
            "description": "The contact's lname",
            "type": "string",
            "default": "Fredrick"
          },
          {
            "name": "dob",
            "in": "query",
            "required": true,
            "description": "The contact's dob",
            "type": "string",
            "format": "date",
            "default": "1989-06-21"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully deleted contact"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    }
  },
  "definitions": {
    "Identification": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "description": "Unique identifier representing a specific Contact."
        },
        "first_name": {
          "type": "string",
          "pattern": "[a-z0-9]{8,64}",
          "minLength": 8,
          "maxLength": 64,
          "description": "First Name."
        },
        "last_name": {
          "type": "string",
          "pattern": "[a-z0-9]{8,64}",
          "minLength": 8,
          "maxLength": 64,
          "description": "Last Name."
        },
        "dob": {
          "type": "string",
          "format": "date",
          "description": "Date of birth",
          "default": "1989-06-21"
        },
        "gender": {
          "type": "string",
          "enum": [
            "M",
            "F"
          ],
          "description": "Gender."
        },
        "title": {
          "type": "string",
          "description": "Courtesy Title."
        }
      }
    },
    "Address": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier representing a specific Address."
          },
          "type": {
            "type": "string",
            "description": "address type e.g home,office"
          },
          "number": {
            "type": "string",
            "description": "house number"
          },
          "street": {
            "type": "string",
            "description": "street address"
          },
          "unit": {
            "type": "string",
            "description": "apartment / unit"
          },
          "city": {
            "type": "string",
            "description": " City"
          },
          "state": {
            "type": "string",
            "description": "State"
          },
          "zipcode": {
            "type": "string",
            "description": "Zip Code"
          }
        }
      }
    },
    "Communication": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier representing a specific Comunication type."
          },
          "type": {
            "type": "string",
            "description": "Communication methode type e.g email, phone"
          },
          "value": {
            "type": "string",
            "description": "Value of email adress  or phone number"
          },
          "preferred": {
            "type": "string",
            "enum": [
              true,
              false
            ],
            "description": "Preferred Communication method"
          }
        }
      }
    },
    "Contact": {
      "type": "object",
      "properties": {
        "Identification": {
          "$ref": "#/definitions/Identification"
        },
        "Address": {
          "$ref": "#/definitions/Address"
        },
        "Communication": {
          "$ref": "#/definitions/Communication"
        }
      }
    },
    "PatchArr": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "op": {
            "type": "string",
            "enum": [
              "remove",
              "add",
              "replace"
            ],
            "example": "remove",
            "description": "Allowed operations are add , remove , replace"
          },
          "path": {
            "type": "string",
            "description": "Path of the field to be updated",
            "example": "/Identification/Title"
          },
          "value": {
            "type": "object",
            "description": "New value"
          }
        }
      }
    },
    "Error": {
      "properties": {
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}